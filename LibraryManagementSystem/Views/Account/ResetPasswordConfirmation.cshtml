@{
    ViewBag.Title = "Reset Password Confirmation";
}

<div class="reset-password-confirmation-container" style="max-width: 600px; margin: 50px auto; padding: 30px; background-color: #f8f9fa; border-radius: 10px; box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1); text-align: center;">
    <h2 style="color: #4a9bc3; font-weight: bold; margin-bottom: 20px;">Reset Password Confirmation</h2>
    <p style="font-size: 1.1rem; color: #555;">
        Please check your email for the password reset link. If you don't see it in your inbox, be sure to check your spam or junk folder.
    </p>
    <div style="margin-top: 20px;">
        <a href="@Url.Action("Login", "Account")" class="btn btn-lg btn-primary" style="background-color: #4a9bc3; padding: 10px 20px; border-radius: 5px;">
            <i class="fas fa-sign-in-alt" style="margin-right: 8px;"></i> Go to Login
        </a>
    </div>
</div>
