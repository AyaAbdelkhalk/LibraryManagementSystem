 @model Application.ViewModels.LoginViewModel
@{
    ViewBag.Title = "Login";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login Page</title>
    <link rel="stylesheet" href="~/css/stylesLogin.css">
     <link rel="stylesheet" href="~/css/login.css">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="~/js/login.js"></script>

</head>
<body>
    <div class="container">
        <div class="login-form">
            <h2 style="font-family:math">Login</h2>
            @if (ViewBag.ErrorMessage != null)
            {
                <div class="alert alert-danger">
                    @ViewBag.ErrorMessage
                </div>
            }
            <p>Don't have an account yet? <a href="/Account/Register">Sign Up</a></p>
            <form asp-action="Login" method="post" id="loginForm">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <label asp-for="Email">Email Address</label>
                <input asp-for="Email" type="email" id="email" placeholder="you@email.com" required>
                <span asp-validation-for="Email" class="text-danger"></span>

                <div style="position: relative; display: inline-block; width: 100%;">
                    <label asp-for="Password" for="password">Password</label>
                    <input asp-for="Password" type="password" id="password" placeholder="Enter your Password" style="width: 100%; padding-right: 50px;">
                    <button type="button" class="btn-toggle-password" style="position: absolute; right: 10px; top: 60%; transform: translateY(-50%);">
                        Show
                    </button>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>



                <div class="options">
                    
                    <a asp-area="" asp-controller="Account" asp-action="RequestResetPassword">Forget Password?</a>
                </div>

                <button type="submit">Login</button>

            </form>
        </div>
        <div class="illustration">
            <img src="~/Images/User/login.png" alt="Login Illustration">
        </div>
    </div>
</body>
</html>  
 
