@model Application.ViewModels.Book.AddBookVM
@{
    Layout = null;
}
<html lang="en" dir="ltr">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Boxicons CDN Link -->
    <link href='https://unpkg.com/boxicons@2.0.7/css/boxicons.min.css' rel='stylesheet'>
    <!-- BOOTSTRAB -->
    <link rel="stylesheet" type="text/css"
          href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <!-- CSS -->
    <link rel="stylesheet" href="~/css/addbook.css">
    <link rel="stylesheet" href="~/css/book.css">

</head>

<body>

    <h2 style="margin-left:12%; font-size:xx-large; margin-top:3%;margin-bottom:2%">Add New Book</h2>
<div class="form" id="form">

<form asp-action="Add" method="post">
    <div class="form-group">
        <label asp-for="ISBN"></label>
        <input asp-for="ISBN"   class="pro" />
        <span asp-validation-for="ISBN" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Author"></label>
        <input asp-for="Author" class="form-control" />
        <span asp-validation-for="Author" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Number"></label>
        <input asp-for="Number" class="form-control" />
        <span asp-validation-for="Number" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
    </div>

    <div class="form-group">
        <label>Genres</label>
        @foreach (var genre in Model.AvailableGenres)
        {
            <div class="form-check">
                <input class="form-check-input" type="checkbox" name="GenreIds" value="@genre.Id" />
                <label class="form-check-label">@genre.Name</label>
            </div>
        }
        <span asp-validation-for="GenreIds" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="PublisherId">Publisher</label>
        <select asp-for="PublisherId" class="form-control">
            <option value="">Select </option>
            @foreach (var publisher in Model.AvailablePublishers)
            {
                <option value="@publisher.Id">@publisher.Name</option>
            }
        </select>
        <span asp-validation-for="PublisherId" class="text-danger"></span>
    </div>

@*     <button type="submit" class="btn btn-primary submit-btn">Add Book</button>
 *@
    <div class="buttons">
        <button class="btn" id="add-btn" type="submit">Add Book</button>
    </div>

</form>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
    <script src="js/script.js"></script>

</body>

</html>
