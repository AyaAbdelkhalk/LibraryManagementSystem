@model IEnumerable<Application.ViewModels.Book.ViewBookVM>

@{
    ViewData["Title"] = "Books";
}
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Orders</title>
    <link rel="stylesheet" href="~/css/book.css">
    <link rel="stylesheet" href="~/css/booklist.css">
    <!-- ====== ionicons ======= -->
    <link href='https://unpkg.com/boxicons@2.0.9/css/boxicons.min.css' rel='stylesheet'>
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
    <script type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"></script>
</head>

<body>
    <div class="details">
        <div class="recentOrders">
            <div class="cardHeader">
                <h2>All Books</h2>
            </div>
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>ISBN</th>
                <th>Title</th>
                <th>Author</th>
                <th>Description</th>
                <th>Genres</th>
                <th>Publisher</th>
                <th>Date</th>
                <th>View Copies</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var book in Model)
            {
                <tr>
                    <td>@book.ISBN</td>
                    <td>@book.Name</td>
                    <td>@book.Author</td>
                    <td>@book.Description</td>
                    <td>
                        @if (book.Genres != null && book.Genres.Any())
                        {
                            <ul>
                                @foreach (var genre in book.Genres)
                                {
                                    <li>@genre</li>
                                }
                            </ul>
                        }
                        else
                        {
                            <span>No Genres</span>
                        }
                    </td>
                    <td>@book.PublisherName</td>
                    <td>@book.Date.ToString("dd/MM/yyyy")</td>
                    <td>

                        @if (book.BookCopies != null && book.BookCopies.Any())
                        {
                            <ul>
                                @foreach (var copy in book.BookCopies)
                                {
                                    <li>@copy.Location - Available: @(copy.Available ? "Yes" : "No")</li>
                                }
                            </ul>
                        }
                        else
                        {
                            <span>No Copies</span>
                        }
                    </td>
                    <td>
                        <a asp-controller="Book" asp-action="Edit" asp-route-id="@book.Id" class="btn btn-primary">Edit</a>
                        <a asp-controller="Book" asp-action="Delete" asp-route-id="@book.Id" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this book?');">Delete</a>
                       
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <script src="~/js/script.js"></script>
</div>
</div>

</body>
</html>