@model Application.ViewModels.Penalty.AddPenaltyVM

@{
    ViewData["Title"] = "Add Penalty";
}

<h2>Add Penalty</h2>

<div class="container">
    <form asp-action="AddPenalty" method="post">
        <div class="mb-3">
            <label asp-for="Type" class="form-label"></label>
            <select asp-for="Type" class="form-control" asp-items="Model.PenaltyTypeList" id="penaltyType">
                <option value="">-- Select Penalty Type --</option>
            </select>
            <span asp-validation-for="Type" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Amount" class="form-label"></label>
            <input asp-for="Amount" class="form-control" type="number" step="0.01" id="penaltyAmount" />
            <span asp-validation-for="Amount" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="IsPaid" class="form-label"></label>
            <select asp-for="IsPaid" class="form-select">
                <option value="true">Yes</option>
                <option value="false">No</option>
            </select>
            <span asp-validation-for="IsPaid" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Username" class="form-label"></label> 
            <input asp-for="Username" class="form-control" /> 
            <span asp-validation-for="Username" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="CheckoutId" class="form-label"></label>
            <input asp-for="CheckoutId" class="form-control" type="number" />
            <span asp-validation-for="CheckoutId" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <button type="submit" class="btn btn-primary">Add Penalty</button>
            <a asp-action="GetPenalites" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>

<script src="~/js/EditPenalty.js"></script>



