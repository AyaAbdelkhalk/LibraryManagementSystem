@model Application.ViewModels.Book.AddBookCopyVM

@{
    ViewData["Title"] = "Add Book Copy";
}
<html lang="en" dir="ltr">

<head>
    <link rel="stylesheet" href="~/css/addbook.css">
    <link rel="stylesheet" href="~/css/book.css">
    <link rel="stylesheet" href="~/css/AdminDashboard.css">
    <style>
        /* Sidebar styling */
        .sidebar {
            width: 220px;
            position: fixed;
            top: 0;
            left: 0;
            height: 100%;
            background-color: #333;
            padding-top: 20px;
        }

        .sidebar ul {
            list-style-type: none;
            padding: 0;
        }

        .sidebar ul li {
            margin: 15px 0;
        }

        .sidebar ul li a {
            color: #fff;
            text-decoration: none;
            display: block;
            padding: 10px;
            font-size: 16px;
        }

        .sidebar ul li a:hover {
            background-color: #575757;
        }

        /* Content area adjustments */
        .main-content {
            margin-left: 240px; /* Offset for sidebar */
            padding: 20px;
        }

        .form {
            max-width: 800px;
            margin: 0 auto;
        }

        /* Responsive Design */

    </style>
</head>
<body>
<h2>@ViewData["Title"]</h2>
<nav class="sidebar">
    <ul>
        <li><a href="#">Home Page</a></li>
        <li><a href="@Url.Action("Index", "Book")">Manage Books</a></li>
        <li><a href="#">Manage Members</a></li>
        <li><a href="#">Issue Book</a></li>
        <li><a href="#">Return Book</a></li>
        <li><a href="#">View Records</a></li>
        <li><a href="#">View Issued Books</a></li>
        <li><a href="#">Defaulter List</a></li>
        <li><a href="#">Contacts</a></li>
        <li><a href="#">Logout</a></li>
    </ul>
</nav>
<form asp-action="Create" method="post" class="form-horizontal">
    <!-- Hidden input for BookId (comes from route) -->
    <input type="hidden" asp-for="BookId" />

    <div class="form-group">
        <label asp-for="Location" class="control-label">Location</label>
        <input asp-for="Location" class="form-control" />
        <span asp-validation-for="Location" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Available" class="control-label">Is Available?</label>
        <select asp-for="Available" class="form-control">
            <option value="true">Available</option>
            <option value="false">Unavailable</option>
        </select>
        <span asp-validation-for="Available" class="text-danger"></span>
    </div>

        <div class="buttons">
            <button class="btn btn-primary" id="add-btn" type="submit">Add Book Copy</button>
            <a asp-controller="Book" asp-action="Index" class="btn btn-secondary">Cancel</a>
        </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
</body>
</html>