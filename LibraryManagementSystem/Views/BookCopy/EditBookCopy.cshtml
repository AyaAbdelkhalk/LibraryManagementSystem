@model Application.ViewModels.Book.AddBookCopyVM

@{
    Layout = "AdminLayout";
}
@{
    ViewData["Title"] = "Edit";
}
<html lang="en" dir="ltr">

<head>
    <link rel="stylesheet" href="~/css/addbook.css">
    <link rel="stylesheet" href="~/css/book.css">
    <link rel="stylesheet" href="~/css/AdminDashboard.css">
    <style>
        /* Content area adjustments */
        .main-content {
            margin-left: 240px; /* Offset for sidebar */
            padding: 20px;
        }

        .form {
            max-width: 800px;
            margin: 0 auto;
        }
    </style>
</head>

<body>
    <h2 style="margin-left:20%; font-size:xx-large; margin-bottom:2%; margin-top:7%">Edit Book Copy</h2>
    <div class="form" id="form">
        <form asp-action="Edit" method="post" class="form-horizontal">
            
            <!-- Hidden input for BookId (comes from the route or model) -->
            <input type="hidden" asp-for="BookId" />

            <div class="form-group">
                <label asp-for="Location" class="control-label">Location</label>
                <input asp-for="Location" class="form-control" />
                <span asp-validation-for="Location" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Available" class="control-label">Is Available?</label>
                <select asp-for="Available" class="form-control">
                    <option value="true" selected="@(Model.Available ? "selected" : null)">Available</option>
                    <option value="false" selected="@(Model.Available ? null : "selected")">Unavailable</option>
                </select>
                <span asp-validation-for="Available" class="text-danger"></span>
            </div>

            <div class="buttons">
                
                <a asp-controller="BookCopy" asp-action="List" asp-route-id="@Model.BookId">
                    <button class="btn btn-primary" id="edit-btn" type="submit" asp-route-id="@Model.Id">Save Changes</button>
                </a>
                <a asp-controller="BookCopy" asp-action="List" asp-route-id="@Model.Id" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</body>

</html>

